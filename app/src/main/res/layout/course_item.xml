<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/video_pic1" />

        <LinearLayout
            android:id="@+id/course_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="#4c000000">

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dip"
                android:paddingEnd="70dip"
                android:text="DDP Yoga Combo"
                android:maxLines="3"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_lesson_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dip"
                android:paddingTop="5dip"
                android:paddingEnd="20dip"
                android:text="21 lesson"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@mipmap/vedio_icon_arrow"
            android:layout_gravity="center_vertical|right"
            android:layout_marginEnd="30dip"/>

    </FrameLayout>
</layout>