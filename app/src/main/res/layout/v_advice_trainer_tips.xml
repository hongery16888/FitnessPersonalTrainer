<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@drawable/shape_gradient"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="20dp"
        android:text="Trainer Tips"
        android:textColor="#ff64a2"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:text="Recommended based on your personal fitness goals."
        android:textColor="@color/common_dark_gray"
        android:textSize="14dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:layout_marginTop="@dimen/dp_20"
        android:requiresFadingEdge="none"
        android:scrollbars="none" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BROWSE Tips"
        android:textSize="18sp"
        android:textColor="@color/common_dark_gray"
        android:padding="@dimen/dp_15"
        android:layout_margin="@dimen/dp_20"
        android:gravity="center"
        android:background="@drawable/shape_corner_stroke_half"/>

</LinearLayout>